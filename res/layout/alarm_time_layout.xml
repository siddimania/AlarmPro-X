<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_time_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    >

    <TextView
        android:id="@+id/hoursId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="#2A52BE"
        android:textSize="40dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/semicolon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hoursId"
        android:text=":"
         android:textColor="#2A52BE"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/minutesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/semicolon"
        android:text=""
        android:textColor="#2A52BE"
        android:textSize="40dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/Am_Pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/minutesId"
        android:text=" "
        android:textColor="#5C5C5C"
        android:textSize="18dp"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/blueAlarm"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bellicon_blue1" />

</RelativeLayout>